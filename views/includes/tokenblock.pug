.card.mb-3(id='block'+block.block+'chain'+block.chain+'card')
  form.card-body
    .row.mb-3
      label.col-sm-2.control-label.text-end.blockResize(for='block'+block.block+'chain'+block.chain+'number') #{('Block')}:
      .col-sm-10
        .input-group
          span.input-group-text #{('#')}:
          input.form-control(id='block'+block.block+'chain'+block.chain+'number', type='number', value=block.block onchange='updateChain('+block.block+', '+block.chain+');' onkeyup='updateChain('+block.block+', '+block.chain+');')

    .row.mb-3
      label.col-sm-2.control-label.text-end.blockResize(for='block'+block.block+'chain'+block.chain+'nonce') #{('Nonce')}:
      .col-sm-10
         input.form-control(id='block'+block.block+'chain'+block.chain+'nonce', type='text', value=block.nonce, onkeyup='updateChain('+block.block+', '+block.chain+');')

    .row.mb-3
      label.col-sm-2.control-label.text-end.blockResize #{('Tx')}:
      .col-sm-10
        each tx, x in block.txs
          .input-group
            .input-group-text #{('$')}
            input.form-control(id='block'+block.block+'chain'+block.chain+'tx'+x+'value', type='text', value=tx.value, onkeyup='updateChain('+block.block+', '+block.chain+');')
            .input-group-text #{('From')}:
            input.form-control(id='block'+block.block+'chain'+block.chain+'tx'+x+'from', type='text', value=tx.from, onkeyup='updateChain('+block.block+', '+block.chain+');')
            .input-group-text #{('->')}
            input.form-control(id='block'+block.block+'chain'+block.chain+'tx'+x+'to', type='text', value=tx.to, onkeyup='updateChain('+block.block+', '+block.chain+');')

    #state.row.mb-3
      label.col-sm-2.control-label.text-end.blockResize(for='block'+block.block+'chain'+block.chain+'previous') #{('Prev')}:
      .col-sm-10
        input.form-control(id='block'+block.block+'chain'+block.chain+'previous', type='text', value=block.previous)

    #state.row.mb-3
      label.col-sm-2.control-label.text-end.blockResize(for='block'+block.block+'chain'+block.chain+'hash') #{('Hash')}:
      .col-sm-10
        input.form-control(id='block'+block.block+'chain'+block.chain+'hash', type='text' disabled)

    .row.mb-3
      .col-sm-2
        i.icon-spinner.icon-spin.icon-large
      .col-sm-10
        button.btn.btn-primary.ladda-button(id='block'+block.block+'chain'+block.chain+'mineButton', data-style='expand-right')
          span.ladda-label #{('Mine')}
