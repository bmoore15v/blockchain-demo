.card.mb-3(id="block"+block.block+"chain"+block.chain+"card")
  form.card-body

    .row.mb-3
      label.col-sm-2.col-form-label.text-end.blockResizeKeys(for="block"+block.block+"chain"+block.chain+"number") #{("Block:")}
      .col-md-10
        .input-group
          span.input-group-text #{("#")}
          input.form-control(id="block"+block.block+"chain"+block.chain+"number", type="text", value=block.block onkeyup="updateChain("+block.block+", "+block.chain+", "+block.txCount+");")

    .row.mb-3
      label.col-sm-2.col-form-label.text-end.blockResizeKeys(for="block"+block.block+"chain"+block.chain+"nonce") #{("Nonce:")}
      .col-md-10
          input.form-control(id="block"+block.block+"chain"+block.chain+"nonce", type="text", value=block.nonce, onkeyup="updateChain("+block.block+", "+block.chain+", "+block.txCount+");")

    .row.mb-3
      label.col-sm-2.col-form-label.text-end.blockResizeKeys #{("Coinbase:")}
      .col-md-10
        .input-group
          .input-group-text #{("$")}
          input.form-control(id="block"+block.block+"chain"+block.chain+"coinbasevalue", type="text", value=block.coinbasevalue, onkeyup="updateChain("+block.block+", "+block.chain+", "+block.txCount+");")
          .input-group-text #{("->")}
          input.form-control(id="block"+block.block+"chain"+block.chain+"coinbaseto", type="text", value=block.coinbaseto, onkeyup="updateChain("+block.block+", "+block.chain+", "+block.txCount+");")

    .row.mb-3
      label.col-sm-2.col-form-label.text-end.blockResizeKeys #{("Tx:")}
      .col-md-10
        each tx, x in block.txs
          .input-group
            .input-group-text #{("$")}
            input.form-control(id="block"+block.block+"chain"+block.chain+"tx"+x+"value", type="text", value=tx.value, onkeyup="updateChain("+block.block+", "+block.chain+", "+block.txCount+");")
            .input-group-text #{("From:")}
            input.form-control(id="block"+block.block+"chain"+block.chain+"tx"+x+"from", type="text", value=tx.from, onkeyup="updateChain("+block.block+", "+block.chain+", "+block.txCount+");")
            .input-group-text #{("->")}
            input.form-control(id="block"+block.block+"chain"+block.chain+"tx"+x+"to", type="text", value=tx.to, onkeyup="updateChain("+block.block+", "+block.chain+", "+block.txCount+");")
          .input-group
            .input-group-text #{("Seq:")}
            input.form-control.col-md-10-1(id="block"+block.block+"chain"+block.chain+"tx"+x+"seq", type="text", value=tx.seq, onkeyup="updateChain("+block.block+", "+block.chain+", "+block.txCount+");")
            .input-group-text #{("Sig:")}
            input.form-control(id="block"+block.block+"chain"+block.chain+"tx"+x+"sig", type="text", value=tx.sig, onkeyup="updateChain("+block.block+", "+block.chain+", "+block.txCount+");")
          br

    #state.row.mb-3
      label.col-sm-2.col-form-label.text-end.blockResizeKeys(for="block"+block.block+"chain"+block.chain+"previous") #{("Prev:")}
      .col-md-10
        input.form-control(id="block"+block.block+"chain"+block.chain+"previous", type="text", value=block.previous)

    #state.row.mb-3
      label.col-sm-2.col-form-label.text-end.blockResizeKeys(for="block"+block.block+"chain"+block.chain+"hash") #{("Hash:")}
      .col-md-10
        input.form-control(id="block"+block.block+"chain"+block.chain+"hash", type="text" disabled)

    .row.mb-3
      .col-sm-2
        i.icon-spinner.icon-spin.icon-large
      .col-md-10
        button.btn.btn-primary.ladda-button(id="block"+block.block+"chain"+block.chain+"mineButton", data-style="expand-right")
          span.ladda-label #{("Mine")}
